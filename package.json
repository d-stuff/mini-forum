{
  "name": "mini-forum",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:*\"",
    "dev:comments": "cd apps/comments && npm run dev",
    "dev:auth": "cd apps/auth && npm run dev",
    "dev:posts": "cd apps/posts && npm run dev",
    "dev:gateway": "cd apps/gateway && npm run dev",
    "db": "docker-compose --file ./mongo-compose.yaml up"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/d-stuff/mini-forum.git"
  },
  "keywords": [],

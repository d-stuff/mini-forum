  "license": "MIT",
  "bugs": {
    "url": "https://github.com/d-stuff/mini-forum/issues"
  },
  "homepage": "https://github.com/d-stuff/mini-forum#readme",
  "dependencies": {
    "concurrently": "^6.0.2",
    "nodemon": "^2.0.7"
  }
}
